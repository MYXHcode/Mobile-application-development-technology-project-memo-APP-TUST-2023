<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myxh.note">

    <application
        android:icon="@mipmap/note"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name="com.myxh.note.activity.SettingsActivity"
            android:theme="@style/AppTheme.Main.NoActionBar" />
        <activity
            android:name="com.myxh.note.activity.DetailActivity"
            android:theme="@style/AppTheme.Main.NoActionBar" />
        <activity
            android:name="com.myxh.note.activity.AddContentActivity"
            android:theme="@style/AppTheme.Main.NoActionBar" />
        <activity
            android:name="com.myxh.note.activity.MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Main.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>